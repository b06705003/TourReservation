<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/of_tourname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="行程名稱"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/of_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-03-12 ~ 2020-03-21"
        app:layout_constraintEnd_toEndOf="@+id/of_orderid"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/of_orderid"
        app:layout_constraintTop_toBottomOf="@+id/of_orderid" />

    <TextView
        android:id="@+id/of_adult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成人: 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/of_child" />

    <TextView
        android:id="@+id/of_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="孩童: 1"
        app:layout_constraintBottom_toTopOf="@+id/of_price"
        app:layout_constraintEnd_toEndOf="@+id/of_date"
        app:layout_constraintEnd_toStartOf="@+id/of_baby"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/of_adult"
        app:layout_constraintStart_toStartOf="@+id/of_date"
        app:layout_constraintTop_toBottomOf="@+id/of_date" />

    <TextView
        android:id="@+id/of_baby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="嬰兒: 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/of_child" />

    <TextView
        android:id="@+id/of_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="總價: 159000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/of_child"
        app:layout_constraintStart_toStartOf="@+id/of_child" />

    <TextView
        android:id="@+id/of_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帳號: sampa"
        app:layout_constraintEnd_toEndOf="@+id/of_tourname"
        app:layout_constraintStart_toStartOf="@+id/of_tourname"
        app:layout_constraintTop_toBottomOf="@+id/of_tourname" />

    <TextView
        android:id="@+id/of_orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="訂單編號: 134"
        app:layout_constraintEnd_toEndOf="@+id/of_username"
        app:layout_constraintStart_toStartOf="@+id/of_username"
        app:layout_constraintTop_toBottomOf="@+id/of_username" />
</androidx.constraintlayout.widget.ConstraintLayout>